		<RelativeLayout x:Name="mainLayout" HorizontalOptions="FillAndExpand" >
			<StackLayout x:Name="stackLayout" Padding="20,40,20,0" HorizontalOptions="FillAndExpand" 
				RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width,Factor=1,Constant=0}"
				RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height,Factor=1,Constant=0}">
				<Button Text="Oublier ce compte" Clicked="ForgetAccountButtonClicked" />
				<Button Text="Supprimer tous les comptes" Clicked="DeleteAllUserButtonClicked"/>
				<Button x:Name="btnCreateGeofence" Text="Creez une Geofence"/>
				<Button x:Name="btnDeleteGeofences" Text="Supprimer toutes les Geofences"/>
				<StackLayout Orientation="Horizontal">
					<Label Text="Transfert de donnÃ©es sous Wifi seulement" VerticalTextAlignment="Center"/>
					<Switch x:Name="wifiOnlySwitch"/>
				</StackLayout>
				<Label x:Name="lblNetworkState" Text="Network State: "/>
				<Label x:Name="lblHostServerState" Text="Host Server State: "/>
			</StackLayout>
		</RelativeLayout>

	</ContentPage.Content>
</ContentPage>
