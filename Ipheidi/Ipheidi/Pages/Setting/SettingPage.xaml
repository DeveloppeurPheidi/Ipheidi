<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns ="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Ipheidi.SettingPage">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout
				x:Name           ="mainLayout"
				Padding          ="20,40,20,20"
				Spacing          ="15"
				HorizontalOptions="FillAndExpand">
				<Button
					x:Name ="forgetAccountBtn"
					Text   ="Oublier ce compte"
					Clicked="ForgetAccountButtonClicked" />
				<Button
					x:Name ="deleteAllAccountBtn"
					Text   ="Supprimer tous les comptes"
					Clicked="DeleteAllUserButtonClicked" />
				<Button
					x:Name="btnGeofences"
					Text  ="Lieux enregistrés" />
				<Button
					x:Name="settingsButton"
					Text  ="Settings" />
				<Button
					x:Name="localisationSettingButton" />
				<StackLayout
					Orientation="Horizontal">
					<Label
						x:Name               ="lblWifiOnly"
						Text                 ="Transfert de données sous Wifi seulement"
						VerticalTextAlignment="Center" />
					<Switch
						x:Name           ="wifiOnlySwitch"
						HorizontalOptions="EndAndExpand" />
				</StackLayout>
				<Label
					IsVisible="false"
					x:Name   ="lblNetworkState"
					Text     ="Network State: " />
				<Label
					IsVisible="false"
					x:Name   ="lblHostServerState"
					Text     ="Host Server State: " />
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>