<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Ipheidi.SettingPage">
	<ContentPage.Content>
		<StackLayout x:Name="mainLayout" Padding="20,40,20,0" HorizontalOptions="FillAndExpand">
			<Button Text="Oublier ce compte" Clicked="ForgetAccountButtonClicked" />
			<Button Text="Supprimer tous les comptes" Clicked="DeleteAllUserButtonClicked" />
			<Button x:Name="btnGeofences" Text="Lieux enregistrés" />
			<StackLayout Orientation="Horizontal">
				<Label Text="Transfert de données sous Wifi seulement" VerticalTextAlignment="Center" />
				<Switch x:Name="wifiOnlySwitch" />
			</StackLayout>
			<Label x:Name="lblNetworkState" Text="Network State: " />
			<Label x:Name="lblHostServerState" Text="Host Server State: " />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>